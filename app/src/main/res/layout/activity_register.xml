<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorgrey"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pallavi.examforms.examformsfill.Activity.RegisterActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register Here"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:textColor="@color/colorseagreen"/>

        <EditText
            android:id="@+id/edtxt_signup_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textSize="@dimen/text_size"
            android:layout_marginTop="@dimen/margin_top"
            android:inputType="text"
            android:textColorHint="@color/colorseagreen"/>

        <EditText
            android:id="@+id/edtxt_signup_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textSize="@dimen/text_size"
            android:layout_marginTop="@dimen/margin_top"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/colorseagreen"/>

        <EditText
            android:id="@+id/edtxt_signup_contact_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone No "
            android:textSize="@dimen/text_size"
            android:layout_marginTop="@dimen/margin_top"
            android:inputType="number"
            android:maxLength="10"
            android:textColorHint="@color/colorseagreen"/>

        <EditText
            android:id="@+id/edtxt_signup_home_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Home State "
            android:textSize="@dimen/text_size"
            android:layout_marginTop="@dimen/margin_top"
            android:inputType="text"
            android:textColorHint="@color/colorseagreen"/>



        <EditText
            android:id="@+id/edtxt_signup_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textSize="@dimen/text_size"
            android:layout_marginTop="@dimen/margin_top"
            android:inputType="textPassword"
            android:textColorHint="@color/colorseagreen"/>

        <EditText
            android:id="@+id/edtxt_signup_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:textSize="@dimen/text_size"
            android:layout_marginTop="@dimen/margin_top"
            android:inputType="textPassword"
            android:textColorHint="@color/colorseagreen"/>



        <Button
            android:id="@+id/btn_signup_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIGNUP"
            android:layout_marginTop="@dimen/margin_top"
            android:textColor="@color/colorWhite"
            android:background="@color/colorseagreen"
            />


    </LinearLayout>


</RelativeLayout>
